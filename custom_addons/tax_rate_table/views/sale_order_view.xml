<odoo>
    <record id="view_order_form_inherit_tax_usd" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.tax.usd</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Add USD tax fields inside order_line tree -->
            <xpath expr="//field[@name='order_line']/tree" position="inside">
                <field name="custom_price_usd"/>
                <field name="custom_tax_usd"/>
                <field name="custom_total_usd"/>
            </xpath>
        </field>
    </record>
</odoo>
