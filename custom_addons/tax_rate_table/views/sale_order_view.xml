<odoo>
    <record id="view_order_form_inherit_tax_rate" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.tax.rate</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook/page[@name='order_lines']" position="before">
                <group string="Tax Information">
                    <field name="custom_tax_rate" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
