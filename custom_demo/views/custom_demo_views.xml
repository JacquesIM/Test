<odoo>
    <record id="view_form_custom_demo" model="ir.ui.view">
        <field name="name">custom.demo.form</field>
        <field name="model">custom.demo</field>
        <field name="arch" type="xml">
            <form string="Custom Demo">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_custom_demo" model="ir.ui.view">
        <field name="name">custom.demo.tree</field>
        <field name="model">custom.demo</field>
        <field name="arch" type="xml">
            <tree string="Custom Demo">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_custom_demo" model="ir.actions.act_window">
        <field name="name">Custom Demo</field>
        <field name="res_model">custom.demo</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
